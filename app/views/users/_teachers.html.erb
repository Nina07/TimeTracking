<h3>List of Teachers and last time entries</h3>
<div class="table-responsive">
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Last clock in time</th>
                <th scope="col">Last clock out time</th>
                <th colspan=3 scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% @last_timesheet.each do |timesheet| %>
                <tr>
                    <td><%= user_name(timesheet.user) %></td>
                    <td><%= timesheet.clock_in %></td>
                    <td><%= timesheet.clock_out %></td>
                    <td><%= link_to "View timesheet", timesheet_path(id: timesheet.user_id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
